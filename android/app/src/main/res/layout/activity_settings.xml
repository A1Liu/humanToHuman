<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/settingsSetServerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="244dp"
        android:layout_marginTop="155dp"
        android:text="Set URL"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/settingsSetServerEditText"
        android:layout_width="197dp"
        android:layout_height="45dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="158dp"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/settingsExitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="70dp"
        android:text="Back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/settingsServerErrorText"
        android:layout_width="305dp"
        android:layout_height="86dp"
        android:layout_marginTop="228dp"
        app:layout_constraintEnd_toEndOf="@+id/settingsSetServerButton"
        app:layout_constraintStart_toStartOf="@+id/settingsSetServerEditText"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>